<h1><%= @project.project_name() %></h1>
<p><a href="/projects/<%= @project.id() %>/edit">Edit <%= @project.project_name() %> project</a></p>
<p><a href="/">Return to Main Page</a></p>

<% if @project.volunteers(@project.id()).any?() %>
  <h3>Here are all the volunteers in this project:</h3>

  <ul>
    <% @project.volunteers(@project.id()).each() do |volunteer|%>
      <%= "<li>#{volunteer.description()}</li>" %>
    <% end %>
  </ul>

  <% else %>
    <p>
      There are no volunteers on this project!
    </p>
  <%end%>

<div class="container">
  <a href="/">Home</a>
</div>
